#%RAML 0.8
---
title: validations
version: 1.0
baseUri: http://localhost:3000/api
/string:
  get:
    queryParameters:
      param:
        type: string
        minLength: 3
        maxLength: 3
  post:
    queryParameters:
      param:
        type: string
        enum: [AAA, BBB]
  put:
    queryParameters:
      param:
        type: string
        pattern: '[a-z]'
  /{id}:
    uriParameters:
      id:
        type: string
        minLength: 3
        maxLength: 3
/stringWithEnum:
  /{id}:
    uriParameters:
      id:
        type: string
        enum: [AAA, BBB]
/stringWithPattern:
  /{id}:
    uriParameters:
      id:
        type: string
        pattern: '[a-z]'
/integer:
  get:
    queryParameters:
      param:
        type: integer
        minimum: 10
        maximum: 10
  /{id}:
    uriParameters:
      id:
        type: integer
        minimum: 10
        maximum: 10
/integerType:
  get:
    queryParameters:
      param:
        type: integer
  /{id}:
    uriParameters:
      id:
        type: integer
/number:
  get:
    queryParameters:
      param:
        type: number
        minimum: 10
        maximum: 10
  /{id}:
    uriParameters:
      id:
        type: number
        minimum: 10
        maximum: 10
/numberType:
  get:
    queryParameters:
      param:
        type: number
  /{id}:
    uriParameters:
      id:
        type: number
/boolean:
  get:
    queryParameters:
      param:
        type: boolean
  /{id}:
    uriParameters:
      id:
        type: boolean
/date:
  get:
    queryParameters:
      param:
        type: date
  /{id}:
    uriParameters:
      id:
        type: date