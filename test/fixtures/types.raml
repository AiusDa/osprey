#%RAML 1.0
title: People API

/any:
  post:
    body:
      application/json:
        properties:
          anyone: any
          anytwo: any
          anythree: any

/object:
  post:
    body:
      application/json:
        properties:
          obj:
            type: object
            properties:
              existing_property: string
            additionalProperties: false

/array:
  post:
    body:
      application/json:
        properties:
          choices:
            type: array
            items: string
            maxItems: 3
            uniqueItems: true

/people:
  post:
    body:
      application/json:
        properties:
          firstname: string
          lastname: string
          phone:
            type: string
            pattern: ^[0-9]{3}-[0-9]{3}-[0-9]{4}$
          birthday:
            type: date-only
          head:
            type: number
            minimum: 1
            maximum: 1
          emails:
            type: array
            minItems: 1
            items:
              type: string
              pattern: ^.+@.+\..+$
          married: boolean
          dogOrCat:
            type: string
            enum: [dog, cat]
          optionalTastes?:
            type: array
            minItems: 1

types:
  User:
    type: object
    properties:
      firstname: string
      lastname:  string
      age:       number

/users:
  post:
    body:
      application/json:
        type: User

/json:
  post:
    body:
      application/json:
        properties:
          hello: string

/json2:
  post:
    body:
      application/json:
        schema: |
          {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "properties": {
              "hello": {
                "type": "string"
              }
            }
          }
